FROM mellemm/gdal-ubuntu:v0.1.0

COPY ./opencv.zip /opencv/
COPY ./opencv_contrib.zip /opencv/

RUN cd /opencv && unzip opencv.zip && unzip opencv_contrib.zip \
    && mkdir -p build && cd build \
		&& cmake -DOPENCV_EXTRA_MODULES_PATH=../opencv_contrib-master/modules ../opencv-master \
		&& cmake --build . \
		&& rm ../*.zip